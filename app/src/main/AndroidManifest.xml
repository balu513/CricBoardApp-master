<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.balakrishnaballi.cricboardapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".application.CricboardApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".mvp.view.FirstScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mvp.view.MainActivity" />
        <activity android:name=".mvp.view.OldMatchesActivity" />
        <activity android:name=".mvp.view.ScoreCardActivity" />
        <activity android:name=".mvp.view.UpcomingMatchesActivity" />
        <activity android:name=".mvp.view.SignupActivity" />
        <activity android:name=".mvp.view.LoginActivity" />
        <activity android:name=".mvp.view.HomePage" />
        <activity android:name=".mvp.view.BaseActivity" />
        <activity android:name=".mvp.view.RegisteredUsersListActivity" />
        <activity android:name=".mvvm.view_.PlayerFinderActivity" />
        <activity android:name=".mvvm.view_.PlayerBioActivity" />
        <activity android:name=".mvp.view.ScoreDetailedActivity"></activity>
    </application>

</manifest>