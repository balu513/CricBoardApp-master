<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_match_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:text="India VS Pakistan"
        android:textColor="#b00505"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_toss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="Toss"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_win"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="Winnig Team"
        android:textColor="#358e0a"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_team_one_players"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="#11b1473b"
                android:gravity="center"
                android:text="Team A" />

            <TextView
                android:id="@+id/tv_team_two_players"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:background="#110b0ebd"
                android:gravity="center"
                android:text="Team B" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_batting_one"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:background="#11a1a157"
                android:gravity="center"
                android:text="Batting 1" />

            <TextView
                android:id="@+id/tv_batting_two"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="#110d740e"
                android:gravity="center"
                android:text="Batting 2" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_bowling_one"
            android:layout_width="330dp"
            android:layout_height="40dp"
            android:background="#1100bdb3"
            android:gravity="center"
            android:text="Bowling 1" />

        <TextView
            android:id="@+id/tv_bowling_two"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="#117c0872"
            android:gravity="center"
            android:text="Bowling 2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="#11eb0f17"
            android:gravity="center"
            android:text="TEAM 1" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="#112d0e2a"
            android:gravity="center"
            android:text="TEAM 2" />
    </LinearLayout>
</LinearLayout>

